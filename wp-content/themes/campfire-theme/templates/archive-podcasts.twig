{% extends "base.twig" %}

{% block content %}
    {% if title %}<h1 class="h2 mb-4">{{title}}</h1>{% endif %}
    
    <div class="row">
        {% for podcast in posts %}
            <div class="col-lg-3 col-md-4 col-sm-6">
                {% include ['tease-podcasts.twig', 'tease.twig'] %}
            </div>
        {% endfor %}
    </div>
    
    {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 1, end_size: 1}) } %}
{% endblock %}