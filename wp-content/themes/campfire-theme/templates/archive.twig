{% extends "base.twig" %}

{% block content %}
    {% if title %}<h1 class="h2">{{title}}</h1>{% endif %}

    {% for post in posts %}
        {% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
    {% endfor %}
    
    {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 1, end_size: 1}) } %}
{% endblock %}